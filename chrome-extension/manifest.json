{
  "name": "Text Mode",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "Browse the web without distractions via simple text based pages.",
  "icons": { "16": "icons/icon_16x16.png" },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "html/options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "css/tab.css"
      ],
      "js": [
        "js/vendor/parseuri.js",
        "js/vendor/holder-2.2.min.js",
        "js/tab.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "browser_action": {
    "name": "Text Mode",
    "default_title": "Set Text Mode on/off",

    "default_icon": "imgs/icon.png",
    "icons": [
      "imgs/icon.png"
    ]
  },

  "web_accessible_resources": [
    "imgs/bg/bg_blank_1px.png",
    "imgs/bg/bg_grey_1px.png",

    "imgs/bg/bg_1.png"
  ]
}
